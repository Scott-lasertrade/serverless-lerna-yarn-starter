{
    "extends": "../../tsconfig.services.json",
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "baseUrl": ".",
        "paths": {
            "@medii/api-lambda": ["../../../packages/api/lambda/src"],
            "@medii/common": ["../../../packages/common/src"],
            "@medii/data": ["../../../packages/data/src"],
            "@medii/eventbridge": ["../../../packages/eventbridge/src"]
        }
    },
    "include": ["./**/*.ts", "UserPoolTriggers.ts"],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        ".build/**/*",
        "**/__tests__/*",
        "**/__e2e__/*"
    ],
    "references": [
        { "path": "../../../packages/common" },
        { "path": "../../../packages/api/lambda" },
        { "path": "../../../packages/data" },
        { "path": "../../../packages/eventbridge" }
    ]
}
